<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2FFC1"
    tools:context=".Options">

    <EditText
        android:id="@+id/cityText"
        android:layout_width="295dp"
        android:layout_height="42dp"
        android:hint="City"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.137"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/locationService"
        app:layout_constraintVertical_bias="0.024" />

    <EditText
        android:id="@+id/keywordText"
        android:layout_width="360dp"
        android:layout_height="41dp"
        android:layout_marginBottom="344dp"
        android:hint="Event Type or Keyword"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.313"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintVertical_bias="0.063" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="387dp"
        android:layout_height="81dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.024"
        app:srcCompat="@drawable/eventsearch__4_" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="360dp"
        android:layout_height="33dp"
        android:text="Preferred Event Type"
        android:textColor="#8ABC5B"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.313"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2"
        app:layout_constraintVertical_bias="0.046" />

    <CheckBox
        android:id="@+id/locationService"
        android:layout_width="361dp"
        android:layout_height="46dp"
        android:text="Use Current Location?"
        android:textColor="#8ABC5B"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.32"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/keywordText"
        app:layout_constraintVertical_bias="0.052" />

    <ImageView
        android:id="@+id/ClearFavorites"
        android:layout_width="209dp"
        android:layout_height="47dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cityText"
        app:layout_constraintVertical_bias="0.156"
        app:srcCompat="@drawable/clearfavorites" />

    <ImageView
        android:id="@+id/SaveChanges"
        android:layout_width="209dp"
        android:layout_height="47dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ClearFavorites"
        app:layout_constraintVertical_bias="0.69"
        app:srcCompat="@drawable/savechanges" />

</androidx.constraintlayout.widget.ConstraintLayout>